<!DOCTYPE html>
<html>
  <head>
    <title>ClientApp</title>
    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "application" %>
    <%= javascript_include_tag "less" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class='topbar'>
      <div class='topbar-inner'>
        <div class='container'>
          <a class='brand' href='#'>Isotope11 Client Application</a>
          <%= yield :title %>
          <% if current_user %>
            <%= link_to('Sign out', destroy_user_session_path, :method => :delete, :class => "btn danger logout") %>
          <% else %>
            <%= link_to('Sign In', '#', :class => "btn success login") %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="container">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <div class="sign_in">
        <h3>Sign in</h3>
        <%= form_tag user_session_path do %>
          <p>
            <%= label_tag 'email' %>
            <div class="input"><%= text_field_tag 'user[email]' %></div>
          </p>
          <p>
            <%= label_tag 'password' %>
            <div class="input"><%= password_field_tag 'user[password]' %></div>
          </p>
          <p>
            <%= check_box_tag 'user[remember_me]' %>
            <%= 'Remember me' %>
          </p>
          <p>
            <%= button_to "Sign in", "#" %>
            <%= link_to "Forgot your password?", new_password_path('user') %>
          </p>
        <% end %>
      </div>
      <%= yield %>
      <br class="clear">
    </div>
  </body>
</html>
