      %th Client Information
  %tbody
    - if @application.business_name != ""
      %tr
        %th Business Name
        %td= @application.business_name
    - if @application.dba_name != ""
      %tr
        %th DBA Name
        %td= @application.dba_name
    - if @application.parent_company != ""
      %tr
        %th Parent Company
        %td= @application.parent_company
    - if @application.taxpayer_id_number != ""
      %tr
        %th Taxpayer ID
        %td= @application.taxpayer_id_number
    - if !@application.years_in_business.nil?
      %tr
        %th Years in Business
        %td= @application.years_in_business
    - if !@application.number_of_employees.nil?
      %tr
        %th Number of Employees
        %td= @application.number_of_employees
    - if @application.business_website != ""
      %tr
        %th Business Website
        %td= @application.business_website
    - if @application.contact_method != ""
      %tr
        %th Contact Method
        %td= @application.contact_method
    - if @application.business_address != ""
      %tr
        %th Business Address
        %td= @application.business_address
    - if @application.city != ""
      %tr
        %th City
        %td= @application.city
    %tr
      %th State
      %td= State.find(@application.state_id).name
    - if @application.zip != ""
      %tr
        %th Zip code
        %td= @application.zip
    - if @application.billing_address != ""
      %tr
        %th Billing Address
        %td= @application.billing_address
    - if @application.phone_number != ""
      %tr
        %th Phone number
        %td= @application.phone_number
    - if @application.email != ""
      %tr
        %th Email
        %td= @application.email

