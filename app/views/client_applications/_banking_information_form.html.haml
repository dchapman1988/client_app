- if @application.banking_information?
  %fieldset
    %legend
      Banking Information
    = f.fields_for :banking_information_forms do |b|
      .clearfix
        = b.label 'Bank Name'
        .input= b.text_field :bank_name
      .clearfix
        = b.label 'Bank Address'
        .input= b.text_field :bank_address
      .clearfix
        = b.label 'Contact Person'
        .input= b.text_field :contact_person
      .clearfix
        = b.label 'Bank Phone Number'
        .input= b.text_field :phone_number
      .clearfix
        = b.label 'Previous Banking Institution'
        .input= b.text_field :previous_bank
