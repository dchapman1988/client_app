%center
  %h1 Please provide the requested information and press submit:
  %h3 If you have any files to upload, please select them before submitting.

.form_wrapper
  = form_for @application, :html => { :multipart => true } do |f|
    = render 'banking_information_form', :f => f
    = render 'requested_information_form', :f => f, :application => @application
    = render 'principal_information_form', :f => f
    = render 'litigation_information_form', :f => f
    #submit
      = f.submit "Submit"

:javascript
  $(document).ready(function(){
    $('.litigation_fields').hide();
    $('.prev_address_fields').hide();
    $('#litigation_yes').click(function(){
      $(".litigation_fields").show();
    });
    $('#litigation_no').click(function(){
      $(".litigation_fields").hide();
    });
    $('#address_yes').click(function(){
      $(".prev_address_fields").hide();
    });
    $('#address_no').click(function(){
      $(".prev_address_fields").show();
    });
  });
