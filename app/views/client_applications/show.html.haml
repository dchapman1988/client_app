%h1= @application.business_name

%h3
  Application Progress:
  = "#{@application.progress}%"
= progress_bar(@application.progress, :tiny => true,:color => "blue") 
%p
= link_to 'Back', root_path
|
= link_to 'Edit', edit_client_application_path(@application)
|
= link_to 'Print', '#', onclick: 'window.print();return false;'
%p

%table.bordered-table.zebra-striped
  %thead
    %tr
      %th
        %h3.header Client Information:
  %tbody
    %tr
      %th Business Name
      %td= @application.business_name
    %tr
      %th DBA Name
      %td= @application.dba_name
    %tr
      %th Parent Company
      %td= @application.parent_company
    %tr
      %th Taxpayer ID
      %td= @application.taxpayer_id_number
    %tr
      %th Years in Business
      %td= @application.years_in_business
    %tr
      %th Number of Employees
      %td= @application.number_of_employees
    %tr
      %th Business Website
      %td= @application.business_website
    %tr
      %th Contact Method
      %td= @application.contact_method
    %tr
      %th Business Address
      %td= @application.business_address
    %tr
      %th City
      %td= @application.city
    %tr
      %th State
      %td= State.find(@application.state_id).name
    %tr
      %th Zip code
      %td= @application.zip
    %tr
      %th Billing Address
      %td= @application.billing_address
    %tr
      %th Phone number
      %td= @application.phone_number
    %tr
      %th Email
      %td= @application.email

    - @application.attachments.each do |attachment|
      %tr
        %th Attachment document/file
        %td= link_to attachment.document_file_name, attachment.document.url

- if !@application.principal_information_forms.empty? 
  %table.bordered-table.zebra-striped
    %thead
      %tr
        %th
          %h3.header Principal Information:
    %tbody
      %tr
        %th Name
        %td= @application.principal_information_forms.first.name
      %tr
        %th Alternate Name
        %td= @application.principal_information_forms.first.alternate_name
      %tr
        %th SSN
        %td= @application.principal_information_forms.first.ssn
      %tr
        %th DOB
        %td= @application.principal_information_forms.first.dob
      %tr
        %th Driver License Number
        %td= @application.principal_information_forms.first.dl_number
      %tr
        %th DL State
        %td= @application.principal_information_forms.first.dl_state
      %tr
        %th Street Address
        %td= @application.principal_information_forms.first.street_address
      %tr
        %th City
        %td= @application.principal_information_forms.first.city
      %tr
        %th State
        %td= @application.principal_information_forms.first.state
      %tr
        %th County
        %td= @application.principal_information_forms.first.county
      %tr
        %th Previous Street Address
        %td= @application.principal_information_forms.first.prev_street_address
      %tr
        %th Previous City
        %td= @application.principal_information_forms.first.prev_city
      %tr
        %th Previous State
        %td= @application.principal_information_forms.first.prev_state
      %tr
        %th Previous County
        %td= @application.principal_information_forms.first.prev_county
      %tr
        %th Position
        %td= @application.principal_information_forms.first.position
      %tr
        %th Company
        %td= @application.principal_information_forms.first.company
      %tr
        %th Years with Company
        %td= @application.principal_information_forms.first.years_with_company
      %tr
        %th Previous Employer
        %td= @application.principal_information_forms.first.prev_employer
      %tr
        %th Date
        %td= @application.principal_information_forms.first.date
      %tr
        %th Company
        %td= @application.principal_information_forms.first.street_address

- if !@application.banking_information_forms.empty? 
  %table.bordered-table.zebra-striped
    %thead
      %tr
        %th
          %h3.header Banking Information:
    %tbody
      %tr
        %th Bank Name
        %td= @application.banking_information_forms.first.bank_name
      %tr
        %th Bank Address
        %td= @application.banking_information_forms.first.bank_address
      %tr
        %th Contact Person
        %td= @application.banking_information_forms.first.contact_person
      %tr
        %th Phone Number
        %td= @application.banking_information_forms.first.phone_number
      %tr
        %th Previous Bank
        %td= @application.banking_information_forms.first.previous_bank
      %tr

- if @application.litigation?
  %table.bordered-table.zebra-striped
    %thead
      %tr
        %th
          %h3.header Litigation Information:
    %tbody
      %tr
        %th Litigation
        %td
          - if !@application.litigation_description.nil?
            = "Yes"
          - else
            = "No"
      %tr
        %th Litigation description
        %td=h truncate(@application.litigation_description, :length => 100)
      - if !@application.litigation_file_name.nil?
        %tr
          %th Litigation Attachments
          %td= link_to @application.litigation_file_name, @application.litigation.url

%table.bordered-table.zebra-striped
  %thead
    %tr
      %th
        %h3.header Application Attachments:
  %tbody
    - if @application.articles_of_incorporation?
      %tr
        %th Articles of Incorporation
        %td= link_to @application.articles_of_incorporation_file_name, @application.articles_of_incorporation.url
    - if @application.proof_of_insurance?
      %tr
        %th Proof of Insurance
        %td= link_to @application.proof_of_insurance_file_name, @application.proof_of_insurance.url
    - if @application.business_license?
      %tr
        %th Business License
        %td= link_to @application.business_license_file_name, @application.business_license.url
    - if @application.partnership_agreement?
      %tr
        %th Partnership Agreement
        %td= link_to @application.partnership_agreement_file_name, @application.partnership_agreement.url
    - if @application.limited_partnership?
      %tr
        %th Limited Partnership
        %td= link_to @application.limited_partnership_file_name, @application.limited_partnership.url
    - if @application.charter?
      %tr
        %th Charter
        %td= link_to @application.charter_file_name, @application.charter.url
    - if @application.association_resolution?
      %tr
        %th Association Resolution
        %td= link_to @application.association_resolution_file_name, @application.association_resolution.url
    - if @application.irs_tax_exempt_status_form?
      %tr
        %th IRS tax exempt status form
        %td= link_to @application.irs_tax_exempt_status_form_file_name, @application.irs_tax_exempt_status_form.url
    - if @application.bank_statement?
      %tr
        %th Bank Statement
        %td= link_to @application.bank_statement_file_name, @application.bank_statement.url
    - if @application.tax_return_one?
      %tr
        %th Tax return 2009
        %td= link_to @application.tax_return_one_file_name, @application.tax_return_one.url
    - if @application.tax_return_two?
      %tr
        %th Tax return 2010
        %td= link_to @application.tax_return_two_file_name, @application.tax_return_two.url

